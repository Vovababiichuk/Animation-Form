<section id="bg" class="form-anime">
   <div class="container">
      <div class="form-anime__inner">
         <button class="switch-btn" onclick="toggleBackground()">switch</button>
         <div class="print-wrapper hvr-bounce-in">
            <p class="line">✌️ const itBrains = </p>
            <p class="line">"the best" </p>
         </div>
         <div class="login-box">
            <form action>
               <h2 class="hvr-wobble-horizontal">Login</h2>
               <div class="input-box">
                  <span class="icon"><ion-icon name="mail"></ion-icon></span>
                  <input type="email" required>
                  <label>Email</label>
               </div>
               <div class="input-box">
                  <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
                  <input type="password" required>
                  <label>Password</label>
               </div>
               <div class="remember-forgot">
                  <label>
                     <input type="checkbox" name="remember-me" id="remember-me">
                     Remember me
                  </label>
                  <a href="#">Forgot Password?</a>
               </div>
               <button class="form-btn hvr-shutter-out-horizontal" type="submit">Login</button>
               <div class="register-link">
                  <p>Don't have an account? <a href="#">Register</a></p>
               </div>
            </form>
         </div>
      </div>
   </div>
</section>
